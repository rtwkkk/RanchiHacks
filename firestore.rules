rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Administrator', 'Super Administrator'];
    }
    
    function isSuperAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Administrator';
    }
    
    // ---------- USERS COLLECTION ----------
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isSignedIn();
      
      // Only the user themselves can create their profile during sign-up
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Users can update their own profile, admins can update any profile
      allow update: if isOwner(userId) || isAdmin();
      
      // Only super admins can delete users
      allow delete: if isSuperAdmin();
    }
    
    // ---------- INCIDENTS COLLECTION ----------
    match /incidents/{incidentId} {
      // All authenticated users can read incidents
      allow read: if isSignedIn();
      
      // Any authenticated user can create incidents (public reports)
      allow create: if isSignedIn();
      
      // Only admins can update incidents (verify, assign, resolve)
      allow update: if isAdmin();
      
      // Only super admins can delete incidents
      allow delete: if isSuperAdmin();
    }
    
    // ---------- NOTIFICATION PREFERENCES ----------
    match /notificationPreferences/{userId} {
      // Users can only read/write their own preferences
      allow read, write: if isOwner(userId);
    }
    
    // ---------- ANALYTICS (Read-only) ----------
    match /analytics/{document=**} {
      // All authenticated users can read analytics
      allow read: if isSignedIn();
      
      // Only admins can write analytics
      allow write: if isAdmin();
    }
    
    // ---------- REPORTS ----------
    match /reports/{reportId} {
      // All authenticated users can read reports
      allow read: if isSignedIn();
      
      // Only admins can create/update reports
      allow create, update: if isAdmin();
      
      // Only super admins can delete reports
      allow delete: if isSuperAdmin();
    }
  }
}
